 @model List<Event>
@{
    ViewData["Title"] = "Dashboard";

}
<html>
    <header>

</header>
<br />
<h1 style="color:antiquewhite; background-color:#dc3545;text-align: center;">Welcome to EventEase   @ViewBag.Username!</h1>
<hr />
<head>
    <style>

        .card{
            width: calc(33.33% - 20px); 
            margin: 10px;
            padding: 10px;
            box-sizing: border-box; 
            border: 2px solid red;
        }
    </style>
</head>
    <body>
        <h1>Upcoming Events </h1>
        <br />
        @{
            ViewBag.Title = "Events";
        }
        @{
            var events = ViewData["Events"] as List<Event>;
        }
    <div id="event-container" class="row row-cols-1 row-cols-md-3 g-4" >
            @if (events != null && events.Any())
            {
                @foreach (var item in events)
                {
                <div class="card h-100">
                        <div class="row g-0">
                            <div class="col-md-4">
                    <img src="@item.EventImageFileName" class="img-fluid rounded-start" alt="..." style="object-fit: cover; height: 200px; width: 200px;border: 4px black">

                            </div>
                            <div class="col-md-8">
                                <div class="card-body d-flex flex-column justify-content-between h-100">
                                <h5 class="card-title" >@item.EventName</h5>
                                <h5 class="card-Desc" style="overflow: hidden; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;">@item.EventDescription</h5>
                                <h5 class="card-Date">@item.EventDate</h5>

                                <a href="@Url.Action("EventDescription", "Event", new { eventId = item.EventId })" class="btn btn-danger mt-auto">View Event </a>

                                </div>
                            </div>
                        </div>
                    </div>
                }

            }

            else
            {
                <p>No Events Found</p>
            }
        </div>
    </body>

</html>
