
@model IEnumerable<EventEase_01.Models.Inquiry>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show Inquiry</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1 class="text-center">Inquiries</h1>
        <div class="row">
            @foreach (var inquiry in Model)
            {
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@inquiry.UserName</h5>
                            <p class="card-text"><strong>Email:</strong> @inquiry.UserEmail</p>
                            <p class="card-text"><strong>Event:</strong> @inquiry.EventName</p>
                            <p class="card-text"><strong>Contact:</strong> @inquiry.UserContact</p>
                            <form asp-controller="SuperAdmin" asp-action="Index" asp-route-id="@inquiry.InquiryId">
                                <button type="submit" class="btn btn-primary">Manage User</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>


    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
