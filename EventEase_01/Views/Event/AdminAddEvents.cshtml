@{
    ViewData["Title"] = "Adding A New Event ";
}
<head>
    <style>
        body {
            background-color: black; /* Set a light background color for the whole page */
            color: #fff; /* Set text color to white */
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
            color: #fff; /* Set label text color to white */
        }

        .btn-primary {
            background-color: #dc3545; /* Red background color */
            border-color: #dc3545;
            color: #fff; /* White text color */
        }

            .btn-primary:hover {
                background-color: #c82333; /* Darker red on hover */
                border-color: #bd2130;
            }

            .btn-primary:focus,
            .btn-primary.focus {
                box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.5); /* Outline color on focus */
            }

        .row {
            margin-right: -5px;
            margin-left: -5px;
        }

        .col-md-4 {
            flex: 0 0 33.333333%;
            max-width: 33.333333%;
            margin-top:5px;
        }

        .button-container {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

            .button-container .btn {
                flex: 0 0 48%; /* Adjust width of buttons */
            }
    </style>

</head>
<div class="row">
    <form class="col-md-4" asp-controller="Venues" asp-action="Create" method="post">
        <div class="form-group">
            <input type="submit" formmethod="post" value="Add a New Venue" class="btn btn-primary" />
        </div>
    </form>
    <form class="col-md-4" asp-controller="Categories" asp-action="Create" method="post">
        <div class="form-group">
            <input type="submit" formmethod="post" value="Add a New Category for Event" class="btn btn-primary" />
        </div>
    </form>
</div>
