 @model IEnumerable<EventEase_01.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Manage Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserAge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserRole)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserAge)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserRole)
            </td>
            <td>
                    <button onclick="location.href='@Url.Action("Edit", "SuperAdmin", new { id = item.UserId })'">Edit</button>

                    <button onclick="location.href='@Url.Action("Details", "SuperAdmin", new { id = item.UserId })'">Details</button>

                    <button onclick="location.href='@Url.Action("Delete", "SuperAdmin", new { id = item.UserId })'">Delete</button>

                    
            </td>
        </tr>
}
    </tbody>
</table>
 
