 @model IEnumerable<EventEase_01.Models.User>

@{
    ViewData["Title"] = "Index";
}
<head>
    <style>
        /* Table Styles */
        .table {
            width: 100%;
            border-collapse: collapse;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

            .table th,
            .table td {
                padding: 12px 15px;
                text-align: left;
            }

            .table thead {
                background-color: #333;
                color: #fff;
            }

            .table th {
                font-weight: 600;
                text-transform: uppercase;
                letter-spacing: 0.5px;
            }

            .table tbody tr:nth-child(even) {
                background-color: #f8f8f8;
            }

            .table tbody tr:hover {
                background-color: #e9e9e9;
            }

            /* Button Styles */
            .table button {
                background-color: #333;
                color: #fff;
                border: none;
                padding: 8px 12px;
                border-radius: 4px;
                cursor: pointer;
                transition: background-color 0.3s ease;
                margin-right: 5px;
            }

                .table button:hover {
                    background-color: #555;
                }
    </style>
</head>
<h1>Manage Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
     
            <th>
                @Html.DisplayNameFor(model => model.UserEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserRole)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
    
            <td>
                @Html.DisplayFor(modelItem => item.UserEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserRole)
            </td>
            <td>
                    <button onclick="location.href='@Url.Action("Edit", "SuperAdmin", new { id = item.UserId })'">Edit</button>

                    <button onclick="location.href='@Url.Action("Details", "SuperAdmin", new { id = item.UserId })'">Details</button>


                    
            </td>
        </tr>
}
    </tbody>
</table>
 
