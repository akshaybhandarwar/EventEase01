
<head>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
    <style>
        body {
            margin-top: 20px;
            background: #f5f5f5;
            font-family: Arial, sans-serif;
        }

        .ticket {
            background: #fff;
            padding: 20px;
            border: 1px solid #ddd;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .ticket-header {
            text-align: center;
            margin-bottom: 20px;
        }

            .ticket-header h1 {
                color: #ff6347;
                font-size: 32px;
                margin: 0;
            }

        .ticket-details {
            margin-bottom: 20px;
        }

            .ticket-details h3 {
                color: #333;
                font-size: 18px;
                margin: 0 0 10px;
            }

            .ticket-details p {
                margin: 5px 0;
            }

        .ticket-price {
            background: #f5f5f5;
            padding: 10px;
            text-align: right;
            font-size: 18px;
            font-weight: bold;
        }

        .ticket-footer {
            border-top: 1px solid #ddd;
            padding-top: 10px;
            font-size: 12px;
            text-align: center;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #ff6347;
            color: #fff;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

            .btn:hover {
                background-color: #ff4d2e;
            }
    </style>
</head>
<br />
<br />
<div class="container">
    <div class="ticket">
        <div class="ticket-header">
            <h1>EventEase</h1>
        </div>
        <div class="ticket-details">
            <h3>Event Details</h3>
            <p><strong>Event:</strong> @TempData["EventName"]</p>
            <p><strong>Location:</strong> @ViewBag.EventCity</p>
            <p><strong>Date:</strong> @ViewBag.EventDate</p>
            <p><strong>Total Seats:</strong> @TempData["NumberOfTickets"]</p>
        </div>
        <div class="ticket-price">
            Total: @TempData["TicketPrice"]
        </div>

        <div class="ticket-footer">
            <p>Thank you for booking with EventEase!</p>
            <a href="#" class="btn" onclick="window.print()">Print Ticket</a>
            <a href="#" class="btn">Download PDF</a>
        </div>
    </div>
</div>