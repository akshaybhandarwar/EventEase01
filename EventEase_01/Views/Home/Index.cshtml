    <style>
        /* Reset default margin and padding */
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            overflow: hidden; /* Prevent scrolling */
        }

        /* Navbar styles */
        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background-color: #333; /* Example background color */
            color: #fff; /* Example text color */
            padding: 10px;
            box-sizing: border-box;
            z-index: 1000; /* Ensure navbar appears on top */
        }

        /* Make the image full-screen, sticking to both left and right sides */
        img {
            width: 100vw; /* Set width to 100% of viewport width */
            height: 100%;
            object-fit: cover; /* Ensure the image covers the entire container without stretching */
            position: fixed; /* Position the image relative to the viewport */
            top: 0;
            left: 0;
            right: 0; /* Stick the image to both left and right sides */
        }

        /* Content area styles */
        .content {
            padding-top: 60px; /* Adjust to match the height of the navbar */
        }
    </style>
